
<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :course_id %>
    <%= f.input :credit %>
    <%= f.input :semester %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
