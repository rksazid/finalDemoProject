<div id="courses-index" class="container-sm">
  <h1 class="card-header fa fa-align-justify">Courses</h1>
</div>
<hr>
<div class="card container-fluid">
  <table class ="card-body">
    <thead class = "card-header">
      <tr>
        <th>No.</th>
        <th>Course id</th>
        <th>Title</th>
        <th>Credit</th>
        <th>Semester</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% no=0 %>
      <% @courses.each do |course| %>
        <% no=no+1 %>
        <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
          <td><%= no %></td>
          <td><%= course.course_id %></td>
          <td><%= course.title %></td>
          <td><%= course.credit %></td>
          <td><%= course.semester %></td>
          <td class="btn-group float-right">
            <%= link_to 'Show', course, class: 'btn btn-sm btn-outline-primary' %>
            <%= link_to 'Edit', edit_course_path(course), class: 'btn btn-sm btn-outline-success' %>
            <%= link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br><hr>
  <span class="card-header-actions">
    <%= link_to 'New Course', new_course_path,class: 'btn btn-sm btn-outline-primary' %>
  </span>
  <hr>

</div>