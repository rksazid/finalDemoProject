<br>
<div id="login"><h2 class="text-center">Login</h2></div>
<hr>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="input-group mb-1">
      <div class="input-group-prepend">
        <span class="input-group-text" >Email<sup><b>*</b></sup> &nbsp; &nbsp;  &nbsp;  &nbsp;</span>
      </div>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: false, placeholder: "example@domain.com" %>
    </div>
    <div class="input-group mb-1">
      <div class="input-group-prepend">
        <span class="input-group-text">Password<sup><b>*</b></sup></span>
      </div>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, label: false, placeholder: "Minimum 6 character"%>
    </div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" , class: "btn btn-primary mb-2"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
