<br>
<div id="forgotpass"><h2 class="text-center">Forgot password?</h2></div>
<hr>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="input-group mb-1">
      <div class="input-group-prepend">
        <span class="input-group-text">Email<sup><b>*</b></sup> &nbsp;   &nbsp;  &nbsp;</span>
      </div>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } , label: false, placeholder: "example@domain.com" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary mb-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
